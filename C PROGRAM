//sum of 10 numbers
#include<stdio.h>
int main()
{

    int i,n[10],sum=0;
    float avg;
    printf("enter 10 numbers = ");
    for(i=0;i<10;i++)
    {
        scanf("%d",&n[i]);
    }
    for(i=0;i<10;i++)
    {
        sum=sum+n[i];
        avg=(float)sum/10;
    }
    printf("the sum is = %d\n",sum);

     printf("the avg is = %.2f",avg);



}
